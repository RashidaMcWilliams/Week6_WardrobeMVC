@model IEnumerable<Week6_WardrobeMVC.Bottom>

@{
    ViewBag.Title = "Bottoms Index";
}

<h2>Shorts and Trackies</h2>

<p>
    @Html.ActionLink("Give Us A Look Then", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">

                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.BottomsName)</h3>
                    <h4>@Html.DisplayFor(modelItem => item.BottomsType)</h4>
                    <p>@Html.DisplayFor(modelItem => item.BottomsPhoto)</p>
                    <p>>@Html.ActionLink("Details", "Details", new { id = item.BottomsID }, new { @class = "btn btn-primary", role = "button" })</p>

                </div>
            </div>
        </div>
    }
</div>

