@model IEnumerable<Week6_WardrobeMVC.Accessory>

@{
    ViewBag.Title = "Accessories Index";
}

<h2>Scarves and Whatnot</h2>

<p>
    @Html.ActionLink("Bit O' This and That", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">

                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.AccessoriesName)</h3>
                    <h4>@Html.DisplayFor(modelItem => item.AccessoriesType)</h4>
                    <p>@Html.DisplayFor(modelItem => item.AccessoriesPhoto)</p>
                    <p>>@Html.ActionLink("Details", "Details", new { id = item.AccessoriesID }, new { @class = "btn btn-primary", role = "button" })</p>

                </div>
            </div>
        </div>
    }
</div>

