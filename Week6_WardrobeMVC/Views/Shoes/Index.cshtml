@model IEnumerable<Week6_WardrobeMVC.Sho>

@{
    ViewBag.Title = "Shoes Index";
}

<h2>Trainers & Custom Kicks</h2>

<p>
    @Html.ActionLink("Careful Bruv", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">

                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.ShoesName)</h3>
                    <h4>@Html.DisplayFor(modelItem => item.ShoesType)</h4>
                    <p>@Html.DisplayFor(modelItem => item.ShoesPhoto)</p>
                    <p>>@Html.ActionLink("Details", "Details", new { id = item.ShoesID }, new { @class = "btn btn-primary", role = "button" })</p>

                </div>
            </div>
        </div>
    }
</div>

